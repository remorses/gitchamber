{
  "serverInfo": {},
  "tools": [
    {
      "name": "listRepoFiles",
      "description": "List all files in a GitHub repository",
      "inputSchema": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string",
            "description": "Repository owner"
          },
          "repo": {
            "type": "string",
            "description": "Repository name"
          },
          "branch": {
            "type": "string",
            "description": "Branch name"
          },
          "glob": {
            "type": "string",
            "default": "**/{*.md,*.mdx,README*}",
            "description": "File glob pattern"
          }
        },
        "required": [
          "owner",
          "repo",
          "branch"
        ],
        "additionalProperties": false,
        "$schema": "http://json-schema.org/draft-07/schema#"
      }
    },
    {
      "name": "readRepoFile",
      "description": "Read the content of a specific file in a GitHub repository",
      "inputSchema": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string",
            "description": "Repository owner"
          },
          "repo": {
            "type": "string",
            "description": "Repository name"
          },
          "branch": {
            "type": "string",
            "description": "Branch name"
          },
          "glob": {
            "type": "string",
            "default": "**/{*.md,*.mdx,README*}",
            "description": "File glob pattern"
          },
          "filepath": {
            "type": "string",
            "description": "Path to the file"
          },
          "start": {
            "type": "integer",
            "description": "Start line number"
          },
          "end": {
            "type": "integer",
            "description": "End line number"
          },
          "showLineNumbers": {
            "type": "boolean",
            "default": false,
            "description": "Show line numbers"
          }
        },
        "required": [
          "owner",
          "repo",
          "branch",
          "filepath"
        ],
        "additionalProperties": false,
        "$schema": "http://json-schema.org/draft-07/schema#"
      }
    },
    {
      "name": "searchRepoContent",
      "description": "Search for content in a GitHub repository",
      "inputSchema": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string",
            "description": "Repository owner"
          },
          "repo": {
            "type": "string",
            "description": "Repository name"
          },
          "branch": {
            "type": "string",
            "description": "Branch name"
          },
          "glob": {
            "type": "string",
            "default": "**/{*.md,*.mdx,README*}",
            "description": "File glob pattern"
          },
          "query": {
            "type": "string",
            "description": "Search query"
          }
        },
        "required": [
          "owner",
          "repo",
          "branch",
          "query"
        ],
        "additionalProperties": false,
        "$schema": "http://json-schema.org/draft-07/schema#"
      }
    }
  ]
}